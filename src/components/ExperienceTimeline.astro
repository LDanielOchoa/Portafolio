---
const experiences = [
    {
        year: "Nov 2025 - Dic 2025",
        title: "Web Application Developer",
        company: "Fundación Universitaria Monserrate",
        desc: "Lideré el desarrollo de un aplicativo web educativo utilizando TypeScript, GraphQL, PostgreSQL y Supabase. Apliqué principios de Clean Architecture y CI/CD para un despliegue optimizado en Vercel, priorizando la escalabilidad y la experiencia de usuario.",
    },
    {
        year: "Feb 2025 - Presente",
        title: "Auxiliar de Desarrollo de Software",
        company: "Sistema Alimentador Oriental S.A.S",
        desc: "Análisis, construcción y mantenimiento de funcionalidades clave. Implemento pruebas unitarias para asegurar estabilidad y optimizo flujos mediante herramientas de CI/CD para despliegues eficientes.",
    },
    {
        year: "Ago 2024 - Feb 2025",
        title: "Practicante de Análisis de Datos",
        company: "Sistema Alimentador Oriental S.A.S",
        desc: "Automatización de análisis de información mediante Python y gestión de bases de datos MySQL. Documenté procesos críticos y modelos de datos para facilitar la toma de decisiones estratégicas.",
    },
];

const education = [
    {
        year: "2025 - Presente",
        title: "Ingeniería de Software",
        institution: "Politécnico Grancolombiano",
        desc: "Formación profesional enfocada en arquitectura de sistemas, gestión de proyectos y principios avanzados de ingeniería de software.",
    },
    {
        year: "2024 - 2025",
        title: "Técnico en Desarrollo de Software",
        institution: "Politécnico Mayor",
        desc: "Base técnica sólida en lógica de programación y desarrollo de aplicaciones funcionales.",
    },
    {
        year: "Certificaciones",
        title: "Meta Full Stack / AWS / Linux / Scrum",
        institution: "Coursera, AWS, LPI, Scrum.org",
        desc: "Certificaciones en Front-End & Back-End (Meta), Cloud Practitioner (AWS), Linux Essentials (LPI) y Scrum Fundamentals (SFC).",
    },
];
---

<section id="experience" class="exp-section">
    <div class="exp-container">
        <!-- SECCIÓN 02: EXPERIENCIA -->
        <header class="exp-header reveal">
            <div class="line-reveal">
                <span class="index">02</span>
                <span class="label">Trayectoria</span>
            </div>
            <h2 class="main-title">
                Experiencia <br />
                <span class="italic">Profesional</span>.
            </h2>
        </header>

        <div class="experience-list">
            {
                experiences.map((exp, index) => (
                    <div
                        class="exp-item reveal"
                        style={`transition-delay: ${index * 100}ms`}
                    >
                        <div class="exp-time">
                            <span class="year">{exp.year}</span>
                        </div>

                        <div class="exp-content">
                            <div class="role-wrapper">
                                <h3 class="role">{exp.title}</h3>
                                <span class="company">{exp.company}</span>
                            </div>
                            <p class="desc">{exp.desc}</p>
                        </div>
                    </div>
                ))
            }
        </div>

        <!-- SECCIÓN 03: EDUCACIÓN (Mismo Estilo Editorial) -->
        <header class="exp-header reveal" style="margin-top: 140px;">
            <div class="line-reveal">
                <span class="index">03</span>
                <span class="label">Formación</span>
            </div>
            <h2 class="main-title">
                Educación <br /> & <span class="italic">Certificados</span>.
            </h2>
        </header>

        <div class="experience-list">
            {
                education.map((edu, index) => (
                    <div
                        class="exp-item reveal"
                        style={`transition-delay: ${index * 100}ms`}
                    >
                        <div class="exp-time">
                            <span class="year">{edu.year}</span>
                        </div>

                        <div class="exp-content">
                            <div class="role-wrapper">
                                <h3 class="role">{edu.title}</h3>
                                <span class="company">{edu.institution}</span>
                            </div>
                            <p class="desc">{edu.desc}</p>
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</section>

<style>
    .exp-section {
        padding: 160px 5%;
        background-color: var(--bg-main);
        position: relative;
    }

    .exp-container {
        max-width: 1400px;
        margin: 0 auto;
    }

    .exp-header {
        margin-bottom: 80px;
    }

    .line-reveal {
        display: flex;
        align-items: center;
        gap: 20px;
        margin-bottom: 2rem;
    }

    .index {
        font-family: var(--font-main);
        font-size: 0.9rem;
        font-weight: 800;
        color: var(--accent-dark);
        opacity: 0.5;
    }

    .label {
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 4px;
        font-weight: 700;
        color: var(--texto-muted);
    }

    .main-title {
        font-family: var(--font-heading);
        font-size: clamp(3rem, 8vw, 5.5rem);
        line-height: 0.95;
        font-weight: 900;
        color: var(--texto);
        letter-spacing: -0.02em;
    }

    .main-title .italic {
        font-style: italic;
        color: var(--accent-dark);
        font-weight: 400;
    }

    /* Experience List */
    .experience-list {
        display: flex;
        flex-direction: column;
    }

    .exp-item {
        display: grid;
        grid-template-columns: 250px 1fr;
        gap: 40px;
        padding: 50px 0;
        border-top: 1px solid var(--glass-border);
        transition: all 0.5s ease;
    }

    .exp-item:last-child {
        border-bottom: 1px solid var(--glass-border);
    }

    .exp-item:hover {
        padding-left: 20px;
        background: radial-gradient(
            circle at left,
            rgba(var(--accent-rgb), 0.03) 0%,
            transparent 70%
        );
    }

    .exp-time {
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    .year {
        font-family: var(--font-heading);
        font-size: 1.2rem;
        font-weight: 700;
        color: var(--texto);
    }

    .role-wrapper {
        margin-bottom: 1rem;
    }

    .role {
        font-family: var(--font-heading);
        font-size: 2rem;
        font-weight: 800;
        color: var(--texto);
        margin: 0 0 5px;
    }

    .company {
        font-size: 0.95rem;
        font-weight: 700;
        color: var(--accent-dark);
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .desc {
        font-size: 1.1rem;
        line-height: 1.7;
        color: var(--texto-muted);
        max-width: 800px;
    }

    /* Animation */
    .reveal {
        opacity: 0;
        transform: translateY(30px);
        transition: all 1s cubic-bezier(0.16, 1, 0.3, 1);
    }

    .reveal.active {
        opacity: 1;
        transform: translateY(0);
    }

    @media (max-width: 1024px) {
        .exp-item {
            grid-template-columns: 1fr;
            gap: 20px;
            padding: 40px 0;
        }
        .role {
            font-size: 1.8rem;
        }
    }

    @media (max-width: 600px) {
        .exp-section {
            padding: 80px 5%;
        }
        .main-title {
            font-size: 2.5rem;
        }
    }
</style>
