---
const experiences = [
    {
        year: "2023 - Presente",
        title: "Senior Full Stack Engineer",
        company: "InnovateTech",
        desc: "Liderazgo técnico en arquitecturas distribuidas y diseño de sistemas complejos con enfoque en performance.",
    },
    {
        year: "2021 - 2023",
        title: "Frontend Architect",
        company: "Digital Studio",
        desc: "Conceptualización de interfaces transicionales y sistemas de diseño escalables para startups de alto impacto.",
    },
    {
        year: "2018 - 2021",
        title: "Software Developer",
        company: "NextGen Solutions",
        desc: "Desarrollo de aplicaciones web robustas y optimización de flujos de usuario complejos.",
    },
];

const education = [
    {
        year: "2019 - 2023",
        title: "Grado en Ingeniería de Software",
        institution: "Universidad Tecnológica",
        desc: "Formación integral en desarrollo de sistemas, bases de datos y gestión de proyectos tecnológicos.",
    },
    {
        year: "2024",
        title: "Certificación en Arquitectura de Soluciones Cloud",
        institution: "AWS / Google Cloud",
        desc: "Especialización en despliegue y escalado de infraestructuras críticas en la nube.",
    },
];
---

<section id="experience" class="exp-section">
    <div class="exp-container">
        <!-- SECCIÓN 02: EXPERIENCIA -->
        <header class="exp-header reveal">
            <div class="line-reveal">
                <span class="index">02</span>
                <span class="label">Trayectoria</span>
            </div>
            <h2 class="main-title">
                Experiencia <br />
                <span class="italic">Profesional</span>.
            </h2>
        </header>

        <div class="experience-list">
            {
                experiences.map((exp, index) => (
                    <div
                        class="exp-item reveal"
                        style={`transition-delay: ${index * 100}ms`}
                    >
                        <div class="exp-time">
                            <span class="year">{exp.year}</span>
                        </div>

                        <div class="exp-content">
                            <div class="role-wrapper">
                                <h3 class="role">{exp.title}</h3>
                                <span class="company">{exp.company}</span>
                            </div>
                            <p class="desc">{exp.desc}</p>
                        </div>
                    </div>
                ))
            }
        </div>

        <!-- SECCIÓN 03: EDUCACIÓN (Mismo Estilo Editorial) -->
        <header class="exp-header reveal" style="margin-top: 140px;">
            <div class="line-reveal">
                <span class="index">03</span>
                <span class="label">Formación</span>
            </div>
            <h2 class="main-title">
                Educación <br /> & <span class="italic">Certificados</span>.
            </h2>
        </header>

        <div class="experience-list">
            {
                education.map((edu, index) => (
                    <div
                        class="exp-item reveal"
                        style={`transition-delay: ${index * 100}ms`}
                    >
                        <div class="exp-time">
                            <span class="year">{edu.year}</span>
                        </div>

                        <div class="exp-content">
                            <div class="role-wrapper">
                                <h3 class="role">{edu.title}</h3>
                                <span class="company">{edu.institution}</span>
                            </div>
                            <p class="desc">{edu.desc}</p>
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</section>

<style>
    .exp-section {
        padding: 160px 5%;
        background-color: var(--bg-main);
        position: relative;
    }

    .exp-container {
        max-width: 1400px;
        margin: 0 auto;
    }

    .exp-header {
        margin-bottom: 80px;
    }

    .line-reveal {
        display: flex;
        align-items: center;
        gap: 20px;
        margin-bottom: 2rem;
    }

    .index {
        font-family: var(--font-main);
        font-size: 0.9rem;
        font-weight: 800;
        color: var(--accent-dark);
        opacity: 0.5;
    }

    .label {
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 4px;
        font-weight: 700;
        color: var(--texto-muted);
    }

    .main-title {
        font-family: var(--font-heading);
        font-size: clamp(3rem, 8vw, 5.5rem);
        line-height: 0.95;
        font-weight: 900;
        color: var(--texto);
        letter-spacing: -0.02em;
    }

    .main-title .italic {
        font-style: italic;
        color: var(--accent-dark);
        font-weight: 400;
    }

    /* Experience List */
    .experience-list {
        display: flex;
        flex-direction: column;
    }

    .exp-item {
        display: grid;
        grid-template-columns: 250px 1fr;
        gap: 40px;
        padding: 50px 0;
        border-top: 1px solid var(--glass-border);
        transition: all 0.5s ease;
    }

    .exp-item:last-child {
        border-bottom: 1px solid var(--glass-border);
    }

    .exp-item:hover {
        padding-left: 20px;
        background: radial-gradient(
            circle at left,
            rgba(var(--accent-rgb), 0.03) 0%,
            transparent 70%
        );
    }

    .exp-time {
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    .year {
        font-family: var(--font-heading);
        font-size: 1.2rem;
        font-weight: 700;
        color: var(--texto);
    }

    .role-wrapper {
        margin-bottom: 1rem;
    }

    .role {
        font-family: var(--font-heading);
        font-size: 2rem;
        font-weight: 800;
        color: var(--texto);
        margin: 0 0 5px;
    }

    .company {
        font-size: 0.95rem;
        font-weight: 700;
        color: var(--accent-dark);
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .desc {
        font-size: 1.1rem;
        line-height: 1.7;
        color: var(--texto-muted);
        max-width: 800px;
    }

    /* Animation */
    .reveal {
        opacity: 0;
        transform: translateY(30px);
        transition: all 1s cubic-bezier(0.16, 1, 0.3, 1);
    }

    .reveal.active {
        opacity: 1;
        transform: translateY(0);
    }

    @media (max-width: 1024px) {
        .exp-item {
            grid-template-columns: 1fr;
            gap: 20px;
            padding: 40px 0;
        }
        .role {
            font-size: 1.8rem;
        }
    }

    @media (max-width: 600px) {
        .exp-section {
            padding: 80px 5%;
        }
        .main-title {
            font-size: 2.5rem;
        }
    }
</style>
