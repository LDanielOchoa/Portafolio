---
const steps = [
    {
        number: "01",
        title: "Estrategia & Discovery",
        desc: "Análisis profundo de la marca y objetivos para trazar un mapa claro hacia el éxito.",
    },
    {
        number: "02",
        title: "Arquitectura & UX",
        desc: "Diseño centrado en el usuario, priorizando la intuición, la jerarquía y la fluidez.",
    },
    {
        number: "03",
        title: "Desarrollo de Élite",
        desc: "Código limpio, performante y escalable, utilizando las tecnologías más vanguardistas.",
    },
    {
        number: "04",
        title: "Lanzamiento & Éxito",
        desc: "Optimización final y despliegue estratégico para garantizar un impacto real.",
    },
];
---

<section id="proceso" class="process-section">
    <div class="process-container">
        <!-- Encabezado Editorial Consistente -->
        <header class="process-header reveal">
            <div class="line-reveal">
                <span class="index">04</span>
                <span class="label">El Roadmap</span>
            </div>
            <h2 class="main-title">
                Ingeniería <br /> con alma de <span class="italic"
                    >diseñador</span
                >.
            </h2>
        </header>

        <div class="process-list">
            {
                steps.map((step, index) => (
                    <div
                        class="process-item reveal"
                        style={`transition-delay: ${index * 150}ms`}
                    >
                        <div class="step-info">
                            <span class="step-number">{step.number}</span>
                            <h3 class="step-title">{step.title}</h3>
                        </div>

                        <div class="step-content">
                            <p class="step-desc">{step.desc}</p>
                            <div class="step-line" />
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</section>

<style>
    .process-section {
        padding: 160px 5%;
        background-color: var(--bg-main);
        position: relative;
    }

    .process-container {
        max-width: 1400px;
        margin: 0 auto;
    }

    /* Editorial Header matching previous sections */
    .process-header {
        margin-bottom: 100px;
    }

    .line-reveal {
        display: flex;
        align-items: center;
        gap: 20px;
        margin-bottom: 2rem;
    }

    .index {
        font-family: var(--font-main);
        font-size: 0.9rem;
        font-weight: 800;
        color: var(--accent-dark);
        opacity: 0.5;
    }

    .label {
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 4px;
        font-weight: 700;
        color: var(--texto-muted);
    }

    .main-title {
        font-family: var(--font-heading);
        font-size: clamp(3rem, 8vw, 6rem);
        line-height: 0.95;
        font-weight: 900;
        color: var(--texto);
        letter-spacing: -0.02em;
    }

    .main-title .italic {
        font-style: italic;
        color: var(--accent-dark);
        font-weight: 400;
    }

    /* Process List - Estilo Editorial Abierto */
    .process-list {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 0;
        border-bottom: 1px solid var(--glass-border);
    }

    .process-item {
        padding: 60px 4rem;
        border-top: 1px solid var(--glass-border);
        border-left: 1px solid var(--glass-border);
        transition: all 0.5s cubic-bezier(0.16, 1, 0.3, 1);
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }

    /* Quitar borde izquierdo a los impares para que no se duplique */
    .process-item:nth-child(2n + 1) {
        border-left: none;
        padding-left: 0;
    }

    .process-item:hover {
        background: radial-gradient(
            circle at center,
            rgba(var(--accent-rgb), 0.04) 0%,
            transparent 70%
        );
    }

    .step-info {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .step-number {
        font-family: var(--font-main);
        font-size: 0.8rem;
        font-weight: 800;
        color: var(--accent-dark);
        letter-spacing: 2px;
    }

    .step-title {
        font-family: var(--font-heading);
        font-size: clamp(1.8rem, 3vw, 2.5rem);
        font-weight: 800;
        color: var(--texto);
        line-height: 1.1;
    }

    .step-content {
        position: relative;
    }

    .step-desc {
        font-size: 1.15rem;
        line-height: 1.7;
        color: var(--texto-muted);
        max-width: 90%;
    }

    .step-line {
        position: absolute;
        bottom: -20px;
        left: 0;
        width: 0%;
        height: 1px;
        background: var(--accent);
        transition: width 0.6s ease;
    }

    .process-item:hover .step-line {
        width: 100px;
    }

    /* Animaciones */
    .reveal {
        opacity: 0;
        transform: translateY(30px);
        transition: all 1s cubic-bezier(0.16, 1, 0.3, 1);
    }

    .reveal.active {
        opacity: 1;
        transform: translateY(0);
    }

    /* Responsive */
    @media (max-width: 1024px) {
        .process-list {
            grid-template-columns: 1fr;
        }
        .process-item {
            border-left: none !important;
            padding: 40px 0 !important;
        }
        .step-title {
            font-size: 2rem;
        }
    }

    @media (max-width: 600px) {
        .process-section {
            padding: 80px 5%;
        }
        .main-title {
            font-size: 2.5rem;
        }
    }
</style>
