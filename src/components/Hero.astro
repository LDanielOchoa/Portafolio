<section id="hero" class="hero-wrap">
    <!-- Glows Decorativos (Mesh Gradients) -->
    <div class="glow glow-1" aria-hidden="true"></div>
    <div class="glow glow-2" aria-hidden="true"></div>
    <div class="glow glow-3" aria-hidden="true"></div>

    <div class="hero-inner">
        <!-- Bloque de Nombre (Jerarquía Clara) -->
        <div class="name-block">
            <h1 class="reveal name-main">
                <span class="text-fill">Daniel</span>
                <span class="text-outline">Ochoa</span>
            </h1>
        </div>

        <!-- Tagline & Descripción -->
        <div class="reveal content-block" style="transition-delay: 100ms">
            <p class="hero-description">
                Desarrollador enfocado en <span class="highlight"
                    >Ingeniería de Software</span
                >, transformando procesos complejos en soluciones digitales
                intuitivas a través de desarrollo full-stack y buenas prácticas
                de arquitectura.
            </p>
        </div>

        <!-- Acciones (UX Refinada) -->
        <div class="reveal actions-block" style="transition-delay: 200ms">
            <div class="btn-container">
                <a href="#proyectos" class="btn-primary">
                    Ver Proyectos
                    <svg
                        width="18"
                        height="18"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2.5"
                    >
                        <path d="M5 12h14M12 5l7 7-7 7"></path>
                    </svg>
                </a>
                <a href="#contacto" class="btn-secondary"> Hablemos </a>
            </div>
        </div>
    </div>

    <!-- Elemento Rotativo (Musica) -->
    <div class="scroll-element reveal" style="transition-delay: 300ms">
        <a
            href="https://open.spotify.com/playlist/2kcN3PCAiRllRApQxcYMIy?si=04a3e04b530e4b48"
            target="_blank"
            rel="noopener noreferrer"
            class="rotating-unit"
            aria-label="Playlist Música que me gusta"
        >
            <svg viewBox="0 0 100 100">
                <path
                    id="circlePath"
                    d="M 50, 50 m -37, 0 a 37,37 0 1,1 74,0 a 37,37 0 1,1 -74,0"
                    fill="none"></path>
                <text
                    font-size="6.5"
                    font-weight="800"
                    fill="var(--texto-muted)"
                    letter-spacing="3"
                >
                    <textPath xlink:href="#circlePath"
                        >• MUSICA QUE ME GUSTA • MUSICA QUE ME GUSTA</textPath
                    >
                </text>
            </svg>
            <div class="unit-icon">
                <svg
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                >
                    <path d="M9 18V5l12-2v13"></path>
                    <circle cx="6" cy="18" r="3"></circle>
                    <circle cx="18" cy="16" r="3"></circle>
                </svg>
            </div>
        </a>
    </div>
</section>

<style>
    .hero-wrap {
        height: 100vh;
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: var(--bg-main);
        position: relative;
        overflow: hidden;
        perspective: 1000px;
    }

    /* Glows Effect (Mesh Gradients) */
    .glow {
        position: absolute;
        width: 50vw;
        height: 50vw;
        border-radius: 50%;
        filter: blur(120px);
        opacity: 0.08;
        z-index: 1;
        pointer-events: none;
        animation: float-glow 20s ease-in-out infinite;
    }

    .glow-1 {
        top: -15%;
        right: -15%;
        background: var(--accent);
        animation-delay: 0s;
    }

    .glow-2 {
        bottom: -15%;
        left: -15%;
        background: var(--accent-dark);
        animation-delay: -10s;
    }

    .glow-3 {
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background: linear-gradient(
            135deg,
            var(--accent) 0%,
            var(--accent-dark) 100%
        );
        opacity: 0.05;
        animation-delay: -5s;
    }

    @keyframes float-glow {
        0%,
        100% {
            transform: translate(0, 0) scale(1);
        }
        33% {
            transform: translate(30px, -30px) scale(1.1);
        }
        66% {
            transform: translate(-30px, 30px) scale(0.9);
        }
    }

    .hero-inner {
        position: relative;
        z-index: 10;
        text-align: center;
        max-width: 1000px;
        width: 100%;
        padding: 0 5%;
    }

    /* Name Block */
    .name-main {
        font-family: var(--font-heading);
        font-size: clamp(4.5rem, 15vw, 12rem);
        line-height: 0.9;
        font-weight: 900;
        margin: 0 0 2.5rem;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .text-fill {
        color: var(--texto);
        background: linear-gradient(
            135deg,
            var(--texto) 0%,
            var(--texto-muted) 100%
        );
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .text-outline {
        color: transparent;
        -webkit-text-stroke: 1.5px var(--texto);
        opacity: 0.12;
        margin-top: -0.1em;
    }

    /* Content Block */
    .hero-description {
        font-family: var(--font-main);
        font-size: clamp(1.1rem, 2.5vw, 1.45rem);
        font-weight: 400;
        line-height: 1.7;
        color: var(--texto-muted);
        max-width: 650px;
        margin: 0 auto 3.5rem;
        text-wrap: balance;
    }

    .highlight {
        color: var(--texto);
        font-weight: 600;
        position: relative;
        background: linear-gradient(
            135deg,
            var(--accent) 0%,
            var(--accent-dark) 100%
        );
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    /* Actions */
    .btn-container {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 2.5rem;
    }

    .btn-primary {
        background: var(--texto);
        color: var(--bg-main);
        padding: 1.2rem 3rem;
        border-radius: 100px;
        font-weight: 800;
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: 12px;
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 2px;
        transition: all 0.5s cubic-bezier(0.19, 1, 0.22, 1);
        border: 1px solid var(--texto);
        position: relative;
        overflow: hidden;
    }

    .btn-primary::before {
        content: "";
        position: absolute;
        top: 50%;
        left: 50%;
        width: 0;
        height: 0;
        border-radius: 50%;
        background: var(--accent);
        transform: translate(-50%, -50%);
        transition:
            width 0.6s ease,
            height 0.6s ease;
        z-index: -1;
    }

    .btn-primary:hover::before {
        width: 300px;
        height: 300px;
    }

    .btn-primary:hover {
        background: transparent;
        color: var(--texto);
        transform: translateY(-8px);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
    }

    .btn-primary svg {
        transition: transform 0.5s ease;
    }

    .btn-primary:hover svg {
        transform: translateX(5px);
    }

    .btn-secondary {
        font-weight: 800;
        color: var(--texto);
        text-decoration: none;
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 2px;
        position: relative;
        padding-bottom: 6px;
        transition: color 0.3s ease;
    }

    .btn-secondary::after {
        content: "";
        position: absolute;
        bottom: 0;
        left: 0;
        width: 0;
        height: 2px;
        background: linear-gradient(
            90deg,
            var(--accent) 0%,
            var(--accent-dark) 100%
        );
        transition: width 0.4s ease;
    }

    .btn-secondary:hover::after {
        width: 100%;
    }

    .btn-secondary:hover {
        color: var(--accent);
    }

    /* Scroll Element */
    .scroll-element {
        position: absolute;
        bottom: 3rem;
        right: 5%;
        z-index: 10;
    }

    .rotating-unit {
        position: relative;
        width: 120px;
        height: 120px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: transform 0.3s ease;
    }

    .rotating-unit:hover {
        transform: scale(1.1);
    }

    .rotating-unit svg {
        animation: spin 20s linear infinite;
        width: 100%;
        height: 100%;
    }

    .unit-icon {
        position: absolute;
        color: var(--accent-dark);
        animation: float 2s ease-in-out infinite;
    }

    @keyframes spin {
        from {
            transform: rotate(0deg);
        }
        to {
            transform: rotate(360deg);
        }
    }

    @keyframes float {
        0%,
        100% {
            transform: translateY(0);
        }
        50% {
            transform: translateY(10px);
        }
    }

    /* Reveal System */
    .reveal {
        opacity: 0;
        transform: translateY(30px);
        transition: all 1s cubic-bezier(0.19, 1, 0.22, 1);
    }

    .reveal.active {
        opacity: 1;
        transform: translateY(0);
    }

    /* Responsive */
    @media (max-width: 768px) {
        .name-main {
            margin-bottom: 2rem;
        }

        .hero-description {
            font-size: 1.1rem;
            margin-bottom: 2.5rem;
        }

        .btn-container {
            flex-direction: column;
            gap: 1.5rem;
        }

        .scroll-element {
            bottom: 2rem;
            right: 50%;
            transform: translateX(50%);
        }

        .rotating-unit {
            width: 100px;
            height: 100px;
        }
    }

    @media (max-width: 600px) {
        .name-main {
            font-size: 20vw;
        }

        .hero-description {
            font-size: 1rem;
        }

        .btn-container {
            width: 100%;
        }

        .btn-primary {
            width: 100%;
            justify-content: center;
            padding: 1.1rem 2rem;
            font-size: 0.85rem;
        }

        .btn-secondary {
            font-size: 0.85rem;
        }

        .scroll-element {
            display: none;
        }

        .glow {
            width: 80vw;
            height: 80vw;
        }
    }
</style>
