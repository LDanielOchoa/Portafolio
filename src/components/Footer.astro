<footer class="footer-section">
    <div class="footer-container">
        <!-- Main Brand Area -->
        <div class="footer-top reveal">
            <div class="footer-brand">
                <h2 class="brand-title">
                    Daniel <span class="italic">Ochoa</span>
                </h2>
                <p class="brand-sub">
                    Arquitectura de Software & Diseño Digital
                </p>
            </div>

            <div class="footer-cta-box">
                <span class="cta-label">¿Tienes una idea en mente?</span>
                <a href="mailto:daniel.ochoaa.cass@gmail.com" class="cta-email"
                    >daniel.ochoaa.cass@gmail.com</a
                >
            </div>
        </div>

        <!-- Links Grid -->
        <div class="footer-grid">
            <div class="footer-col reveal" style="transition-delay: 100ms">
                <span class="col-index">01</span>
                <span class="col-title">Navegación</span>
                <nav class="f-nav">
                    <a href="#proyectos">Proyectos</a>
                    <a href="#sobre-mi">Sobre Mí</a>
                    <a href="#experience">Trayectoria</a>
                    <a href="#contacto">Contacto</a>
                </nav>
            </div>

            <div class="footer-col reveal" style="transition-delay: 200ms">
                <span class="col-index">02</span>
                <span class="col-title">Social</span>
                <nav class="f-nav">
                    <a
                        href="https://www.linkedin.com/in/danielochoaa/"
                        target="_blank">LinkedIn</a
                    >
                </nav>
            </div>
        </div>

        <!-- Copyright -->
        <div class="footer-bottom">
            <p class="copy">
                © {new Date().getFullYear()} Daniel Ochoa. Diseñado con intención.
            </p>
            <div class="footer-line"></div>
        </div>
    </div>
</footer>

<style>
    .footer-section {
        padding: 140px 5% 60px;
        background-color: var(--bg-main);
        border-top: 1px solid var(--glass-border);
    }

    .footer-container {
        max-width: 1400px;
        margin: 0 auto;
    }

    /* Top Brand Area */
    .footer-top {
        display: flex;
        justify-content: space-between;
        align-items: flex-end;
        margin-bottom: 120px;
    }

    .brand-title {
        font-family: var(--font-heading);
        font-size: clamp(3rem, 6vw, 5rem);
        font-weight: 900;
        line-height: 0.9;
        margin-bottom: 1.5rem;
    }

    .brand-title .italic {
        font-style: italic;
        color: var(--accent-dark);
        font-weight: 400;
    }

    .brand-sub {
        font-size: 1.1rem;
        color: var(--texto-muted);
        font-weight: 600;
    }

    .footer-cta-box {
        text-align: right;
    }

    .cta-label {
        display: block;
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 3px;
        font-weight: 800;
        color: var(--accent-dark);
        margin-bottom: 1rem;
    }

    .cta-email {
        font-family: var(--font-heading);
        font-size: clamp(1.2rem, 2.5vw, 2rem);
        color: var(--texto);
        text-decoration: none;
        font-weight: 700;
        transition: color 0.3s ease;
        word-break: break-all;
    }

    .cta-email:hover {
        color: var(--accent-dark);
    }

    /* Links Grid */
    .footer-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 80px;
        margin-bottom: 100px;
        max-width: 600px;
    }

    .col-index {
        display: block;
        font-size: 0.8rem;
        font-weight: 800;
        color: var(--accent);
        margin-bottom: 1rem;
    }

    .col-title {
        display: block;
        font-size: 0.7rem;
        text-transform: uppercase;
        letter-spacing: 3px;
        font-weight: 800;
        color: var(--texto-muted);
        margin-bottom: 2.5rem;
    }

    .f-nav {
        display: flex;
        flex-direction: column;
        gap: 1.2rem;
    }

    .f-nav a {
        text-decoration: none;
        color: var(--texto);
        font-size: 1.1rem;
        font-weight: 600;
        transition: opacity 0.3s ease;
    }

    .f-nav a:hover {
        opacity: 0.5;
    }

    .f-info p {
        font-size: 1.1rem;
        font-weight: 600;
        margin: 0 0 0.5rem;
    }

    .f-info .time {
        font-family: var(--font-heading);
        font-size: 1.8rem;
        color: var(--accent-dark);
    }

    .f-info .tz {
        font-size: 0.8rem;
        color: var(--texto-muted);
        font-weight: 500;
        margin: 0;
    }

    /* Bottom */
    .footer-bottom {
        display: flex;
        align-items: center;
        gap: 40px;
        padding-top: 40px;
        border-top: 1px solid var(--glass-border);
    }

    .copy {
        font-size: 0.9rem;
        color: var(--texto-muted);
        white-space: nowrap;
    }

    .footer-line {
        height: 1px;
        flex-grow: 1;
        background: var(--glass-border);
    }

    @media (max-width: 900px) {
        .footer-top {
            flex-direction: column;
            align-items: flex-start;
            gap: 60px;
        }
        .footer-cta-box {
            text-align: left;
        }
        .footer-grid {
            grid-template-columns: 1fr;
            gap: 60px;
        }
    }
</style>

<script>
    const updateFooterTime = () => {
        const el = document.getElementById("footer-time");
        if (!el) return;
        el.textContent = new Date().toLocaleTimeString("es-CO", {
            hour: "2-digit",
            minute: "2-digit",
            second: "2-digit",
            timeZone: "America/Bogota",
            hour12: false,
        });
    };
    setInterval(updateFooterTime, 1000);
    updateFooterTime();
</script>
