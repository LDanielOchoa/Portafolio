---
const skills = [
    "React",
    "Node.js",
    "Astro",
    "TypeScript",
    "Prisma",
    "Figma",
    "Go",
    "Docker",
    "Tailwind",
    "Next.js",
    "Vue",
    "Python",
];
---

<section class="stack-section">
    <!-- Encabezado Editorial Consistente -->
    <div class="stack-container">
        <header class="stack-header reveal">
            <div class="line-reveal">
                <span class="index">05</span>
                <span class="label">Expertise</span>
            </div>
            <h2 class="main-title">
                Ecosistema <span class="italic">Tecnol√≥gico</span>.
            </h2>
        </header>
    </div>

    <!-- Marquee Refinado -->
    <div class="marquee-wrapper reveal">
        <div class="marquee">
            <div class="marquee-content">
                {
                    skills.map((skill) => (
                        <div class="skill-item">
                            <span class="skill-text">{skill}</span>
                            <span class="skill-separator">/</span>
                        </div>
                    ))
                }
                {/* Duplicamos para loop infinito */}
                {
                    skills.map((skill) => (
                        <div class="skill-item">
                            <span class="skill-text">{skill}</span>
                            <span class="skill-separator">/</span>
                        </div>
                    ))
                }
            </div>
        </div>
    </div>
</section>

<style>
    .stack-section {
        padding: 120px 0;
        background-color: var(--bg-main);
        overflow: hidden;
    }

    .stack-container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 0 5%;
        margin-bottom: 60px;
    }

    /* Editorial Header matching previous sections */
    .line-reveal {
        display: flex;
        align-items: center;
        gap: 20px;
        margin-bottom: 2rem;
    }

    .index {
        font-family: var(--font-main);
        font-size: 0.9rem;
        font-weight: 800;
        color: var(--accent-dark);
        opacity: 0.5;
    }

    .label {
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 4px;
        font-weight: 700;
        color: var(--texto-muted);
    }

    .main-title {
        font-family: var(--font-heading);
        font-size: clamp(3rem, 8vw, 5.5rem);
        line-height: 0.95;
        font-weight: 900;
        color: var(--texto);
        letter-spacing: -0.02em;
        margin: 0;
    }

    .main-title .italic {
        font-style: italic;
        color: var(--accent-dark);
        font-weight: 400;
    }

    /* Marquee Design */
    .marquee-wrapper {
        position: relative;
        padding: 40px 0;
        border-top: 1px solid var(--glass-border);
        border-bottom: 1px solid var(--glass-border);
    }

    .marquee {
        display: flex;
        overflow: hidden;
        user-select: none;
    }

    .marquee-content {
        display: flex;
        align-items: center;
        gap: 0;
        animation: scroll 40s linear infinite;
        min-width: 100%;
    }

    .skill-item {
        display: flex;
        align-items: center;
        padding: 0 3rem;
    }

    .skill-text {
        font-family: var(--font-heading);
        font-size: clamp(3rem, 6vw, 5rem);
        font-weight: 900;
        color: var(--texto);
        opacity: 0.15;
        transition: all 0.5s ease;
        text-transform: uppercase;
        letter-spacing: -0.03em;
    }

    .skill-separator {
        font-family: var(--font-main);
        font-size: clamp(2rem, 4vw, 3rem);
        color: var(--accent);
        margin-left: 3rem;
        font-weight: 300;
        opacity: 0.3;
    }

    /* Hover Effects */
    .marquee-wrapper:hover .skill-text {
        opacity: 0.05;
    }

    .skill-item:hover .skill-text {
        opacity: 1;
        color: var(--accent-dark);
        font-style: italic;
        transform: scale(1.05);
    }

    @keyframes scroll {
        from {
            transform: translateX(0);
        }
        to {
            transform: translateX(-50%);
        }
    }

    /* Reveal */
    .reveal {
        opacity: 0;
        transform: translateY(30px);
        transition: all 1s cubic-bezier(0.16, 1, 0.3, 1);
    }

    .reveal.active {
        opacity: 1;
        transform: translateY(0);
    }

    @media (max-width: 600px) {
        .stack-section {
            padding: 80px 0;
        }
        .skill-text {
            font-size: 2.5rem;
        }
        .skill-separator {
            font-size: 1.5rem;
            margin-left: 1.5rem;
        }
        .skill-item {
            padding: 0 1.5rem;
        }
    }
</style>
