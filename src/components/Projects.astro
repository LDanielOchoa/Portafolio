---
import ProjectsWrapper from "./react/ProjectsWrapper";
---

<section id="proyectos" class="projects-section">
    <div class="projects-container">
        <!-- Encabezado Editorial Consistente -->
        <header class="projects-header reveal">
            <div class="line-reveal">
                <span class="index">01</span>
                <span class="label">Portafolio</span>
            </div>
            <h2 class="main-title">
                Trabajos <br />
                <span class="italic">Seleccionados</span>.
            </h2>
        </header>

        <!-- React Island for dynamic projects and interactive filtering -->
        <ProjectsWrapper client:visible />

        <!-- Footer de sección más limpio -->
        <div class="projects-footer reveal">
            <p class="footer-text">¿Tienes una idea en mente?</p>
            <a href="#contacto" class="footer-cta hover-target">
                Empecemos a crearlo
                <svg
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    aria-hidden="true"
                >
                    <path d="M5 12h14M12 5l7 7-7 7"></path>
                </svg>
            </a>
        </div>
    </div>
</section>

<style>
    .projects-section {
        padding: 160px 5%;
        background-color: var(--bg-main);
        position: relative;
    }

    .projects-container {
        max-width: 1400px;
        margin: 0 auto;
    }

    /* Editorial Header */
    .projects-header {
        margin-bottom: 100px;
    }

    .line-reveal {
        display: flex;
        align-items: center;
        gap: 20px;
        margin-bottom: 2rem;
    }

    .index {
        font-family: var(--font-main);
        font-size: 0.9rem;
        font-weight: 800;
        color: var(--accent-dark);
        opacity: 0.5;
    }

    .label {
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 4px;
        font-weight: 700;
        color: var(--texto-muted);
    }

    .main-title {
        font-family: var(--font-heading);
        font-size: clamp(3rem, 8vw, 6rem);
        line-height: 0.95;
        font-weight: 900;
        color: var(--texto);
        letter-spacing: -0.02em;
    }

    .main-title .italic {
        font-style: italic;
        color: var(--accent-dark);
        font-weight: 400;
    }

    /* Footer Design */
    .projects-footer {
        margin-top: 120px;
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        gap: 2rem;
    }

    .footer-text {
        font-size: 1.25rem;
        color: var(--texto-muted);
        font-weight: 500;
    }

    .footer-cta {
        display: flex;
        align-items: center;
        gap: 1rem;
        font-size: 1.1rem;
        font-weight: 800;
        color: var(--texto);
        text-decoration: none;
        text-transform: uppercase;
        letter-spacing: 2px;
        transition: all 0.4s ease;
        padding-bottom: 8px;
        border-bottom: 1px solid var(--accent);
    }

    .footer-cta:hover {
        color: var(--accent-dark);
        border-color: var(--accent-dark);
        transform: translateX(10px);
    }

    .footer-cta img,
    .footer-cta svg {
        transition: transform 0.4s ease;
    }

    .footer-cta:hover svg {
        transform: translateX(5px);
    }

    @media (max-width: 600px) {
        .projects-section {
            padding: 80px 5%;
        }
        .main-title {
            font-size: 2.5rem;
        }
    }
</style>
